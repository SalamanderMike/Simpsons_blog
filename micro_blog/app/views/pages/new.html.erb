<!-- new.html.erb -->

<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4">

		<h2> Welcome to your page! </h2>

		<%= form_for [@user, @page] do |f| %>

		  <%= f.label :name %>:<br>
		  <%= f.text_field :name, placeholder: "Enter your name", autofocus %><br>
		  <p>
		  	<%= f.label :content %>:<br>
		  	<%= f.text_area :content, placeholder: "Enter content" %><br>
		  </p>

		  <%= f.submit "Save", class: "btn btn-primary" %>

		  <% end %>

		</div>
	</div>
</div>
