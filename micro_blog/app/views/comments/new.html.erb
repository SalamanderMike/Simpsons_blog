<!-- new.html.erb -->

<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4">
      <h2>Title: <%= @post.title %></h2>
      <p>
        <%= @post.body %>
      </p>
         <div>
         <%= form_for [@post, @comment] do |f| %>
         <%= f.text_area :content, class: "form-control", placeholder: "Enter content" %> <br>
         <%= f.submit "Add Comment", class: "btn btn-primary"%>
        <% end %>

     </div>
    </div>
  </div>
</div>
