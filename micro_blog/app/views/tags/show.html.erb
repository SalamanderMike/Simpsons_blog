<!-- show.html.erb -->

<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-6">

		<h1>Tag: <%= @tag.name %></h1>

		<ul>
		  <% @tag.posts.each do |post| %>
		  <li><a href="/posts/<%=post.id%>"> <%=post.title%></a></li>
		  <% end %>
		</ul>

    </div>
  </div>
</div>